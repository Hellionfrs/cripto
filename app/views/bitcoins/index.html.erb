      <%= form.submit "Add",class:"flex-shrink-0 bg-rose-400 hover:bg-rose-700 border-rose-400 hover:border-rose-700 text-sm border-4 text-white py-1 px-2 rounded" %>
      
      </div>
    <% end %> 
